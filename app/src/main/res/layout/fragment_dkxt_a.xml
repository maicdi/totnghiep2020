<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/hinhchao1"
    tools:context=".DkXetTuyen">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:background="#FCFF6600">
        <TextView
            android:text="ĐĂNG KÝ XÉT TUYỂN"
            android:layout_centerInParent="true"
            android:textSize="25sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="16dp"
                    android:background="#fff">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bogoc_khungct"
                        android:hint="Họ và tên:"
                        android:textSize="18sp"
                        android:textColorHint="#7388C1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bogoc_khungct">
                        <Spinner
                            android:id="@+id/spn_gtinh"
                            android:spinnerMode="dialog"
                            android:textColorHint="#7388C1"
                            android:textSize="18sp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent">
                        </Spinner>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvngaysinh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/bogoc_khungct"
                        android:hint="Ngày sinh:"
                        android:textSize="18sp"
                        android:textColorHint="#7388C1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <EditText
                        android:background="@drawable/bogoc_khungct"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:hint="Dân tộc:"
                        android:textSize="18sp"
                        android:textColorHint="#7388C1"
                        />

                    <EditText
                        android:background="@drawable/bogoc_khungct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:textSize="18sp"
                        android:textColorHint="#7388C1"
                        android:hint="Tôn giáo:"
                        />
                </LinearLayout>
                <EditText
                    android:background="@drawable/bogoc_khungct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nơi sinh:"
                    android:textColorHint="#7388C1"
                    android:textSize="18sp"
                    android:layout_marginTop="16dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Hộ khẩu thường trú:"
                    android:layout_marginTop="16dp"
                    android:textColorHint="#7388C1"
                    android:textSize="18sp"
                    android:background="@drawable/bogoc_khungct"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Năm tốt nghiệp:"
                    android:layout_marginTop="16dp"
                    android:textSize="18sp"
                    android:textColorHint="#7388C1"
                    android:background="@drawable/bogoc_khungct"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Số CMND:"
                    android:layout_marginTop="16dp"
                    android:textSize="18sp"
                    android:textColorHint="#7388C1"
                    android:background="@drawable/bogoc_khungct"
                    android:inputType="number"
                    android:maxLength="15"
                    />
                <Button
                    android:id="@+id/btn_tieptuc"
                    android:text="Tiếp tục"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bogoc_dkpage"
                    android:textColor="#fff"
                    android:textSize="20dp" />
                <Button
                    android:id="@+id/btn_huy"
                    android:background="@drawable/bogoc_huy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="HỦY"
                    android:textSize="20sp"
                    android:textColor="#FFFF99"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>