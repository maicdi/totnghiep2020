<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/hinhchao1"
    tools:context=".DangNhap">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:text="ĐĂNG NHẬP"
                android:textSize="35sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <EditText
                android:id="@+id/edt_cmnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="MSSV/CMND"
                android:background="@drawable/bogoc_khungct"
                android:textColorHint="#7388C1"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:drawableRight="@drawable/ic_call_to_action_black_24dp"
                android:inputType="number"
                android:maxLength="15"
                />
            <EditText
                android:id="@+id/edt_mk"
                android:background="@drawable/bogoc_khungct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mật khẩu"
                android:textColorHint="#7388C1"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:drawableRight="@drawable/ic_lock_black_24dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_dn"
                android:text="Đăng nhập"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bogoc_dkpage"
                android:textColor="#fff"
                android:textSize="20dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/tv_quenmk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quên mật khẩu?"
                    android:textSize="25sp"
                    android:textColor="#FFFF99"

                    android:layout_marginRight="15dp"
                    />
                <TextView
                    android:id="@+id/tv_dkchua"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Đăng ký"
                    android:textSize="25sp"
                    android:textColor="#FFFF99"
                    android:textStyle="bold"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>